<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.acedrops">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/acedrop_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/acedrop_logo"
        android:supportsRtl="true"
        android:theme="@style/Theme.AceDrops">
        <activity
            android:name=".view.dash.DashboardActivity"
            android:exported="false"
            />
        <activity
            android:name=".view.auth.AuthActivity"
            android:exported="true"
            android:configChanges="orientation|screenSize|keyboardHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>